# Environment variables for SAGE Backend (NestJS)
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000

# MongoDB Connection
mongoURI=mongodb+srv://username:password@cluster.mongodb.net/sage-db
localURI=mongodb://localhost:27017/sage-db

# JWT Secret Key
JWTKey=your_super_secret_jwt_key_change_in_production

# Groq AI API Key (for chat completions)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google OAuth Credentials (optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Node Environment
NODE_ENV=development
